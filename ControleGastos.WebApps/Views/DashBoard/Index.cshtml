@using ControleGastos.ControleGastos.Business.Enums
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>DashBoard - Controle Financeiro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
    </style>
</head>

<body>
    <div class="container mt-4">
        <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center gap-3">
                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                    <i class="bi bi-cash-coin text-primary fs-4" style="font-size: 2.5rem !important"></i>
                </div>
                <div>
                    <h1 class="h4 fw-bold mb-0">Controle Financeiro - K$K</h1>
                    <small class="text-muted">Bem-vindo, kelvinribei03@gmail.com</small>
                </div>
            </div>

            <a href="~/Login/Index" class="btn btn-outline-secondary d-flex align-items-center">
                <i class="bi bi-box-arrow-right me-2"></i> Sair
            </a>
        </div>
    </div>

    <hr class="my-4">
    <div>
        <p class="text-center text-muted fs-5">
            Gerencie seus gastos pessoais e compartilhados
        </p>
        <div class="d-flex justify-content-center gap-3">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalGasto">
                <i class="bi bi-wallet"></i> Adicionar Gasto
            </button>

            <button class="btn btn-outline-primary" onclick="enviarReceita('pessoal')">
                <i class="bi bi-cash-coin"></i> Adicionar Receita
            </button>
        </div>
    </div>

    </br>

    <div class="container mt-4">
        <ul class="nav nav-tabs row text-center" role="tablist">
            <li class="nav-item col" role="presentation">
                <button class="nav-link active w-100" data-bs-toggle="tab" data-bs-target="#kelvin" type="button" role="tab">
                    <i class="bi bi-person me-2"></i> Kelvin
                </button>
            </li>
            <li class="nav-item col" role="presentation">
                <button class="nav-link w-100" data-bs-toggle="tab" data-bs-target="#karina" type="button" role="tab">
                    <i class="bi bi-person me-2"></i> Karina
                </button>
            </li>
            <li class="nav-item col" role="presentation">
                <button class="nav-link w-100" data-bs-toggle="tab" data-bs-target="#total" type="button" role="tab">
                    <i class="bi bi-pie-chart me-2"></i> Total
                </button>
            </li>
        </ul>

        <div class="tab-content mt-3">
            <div class="tab-pane fade show active" id="kelvin" role="tabpanel">
                <p>Gastos do Kelvin</p>
            </div>
            <div class="tab-pane fade" id="karina" role="tabpanel">
                <p>Gastos da Karina</p>
            </div>
            <div class="tab-pane fade" id="total" role="tabpanel">
                <p>Resumo total</p>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalGasto" tabindex="-1" aria-labelledby="modalGastoLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalGastoLabel">Novo Gasto</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    <form id="formGasto">
                        <div class="mb-3">
                            <label for="descricao" class="form-label">Descrição</label>
                            <input type="text" class="form-control" id="descricao" required>
                        </div>
                        <div class="mb-3">
                            <label for="valor" class="form-label">Valor</label>
                            <input type="number" class="form-control" id="valor" required>
                        </div>
                        <div class="mb-3">
                            <label for="formaPagamento" class="form-label">Forma de Pagamento</label>
                            <select class="form-select" id="formaPagamento" required>
                                <option value="">Selecione</option>
                                @foreach (var forma in Enum.GetValues(typeof(FormaPagamento)))
                                {
                                    <option value="@((int)forma)">@forma</option>
                                }
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" onclick="confirmarGasto('pessoal')">Salvar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const userMap = {
            kelvin: "11111111-1111-1111-1111-111111111111",
            karina: "22222222-2222-2222-2222-222222222222",
            todos: "33333333-3333-3333-3333-333333333333"
        };

        function confirmarGasto() {
            const valor = parseFloat(document.getElementById("valor").value);
            const descricao = document.getElementById("descricao").value;
            const abaAtiva = document.querySelector('.tab-pane.show.active');
            const abaId = abaAtiva?.id;
            const userId = userMap[abaId];
            const formaPagamento = parseInt(document.getElementById("formaPagamento").value);

            fetch(`/Transacao/RegistrarGasto`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    descricao,
                    valor,
                    tipo: 'teste',
                    formaPagamento,
                    categoriaId: 1,
                    userId
                })
            })
                .then(res => {
                    if (res.ok) {
                        alert("Gasto registrado com sucesso!");
                        document.getElementById("formGasto").reset();
                        const modal = bootstrap.Modal.getInstance(document.getElementById("modalGasto"));
                        modal.hide();
                    } else {
                        alert("Erro ao registrar gasto.");
                    }
                })
                .catch(err => console.error("Erro na requisição:", err));
        }
    </script>
</body>
</html>